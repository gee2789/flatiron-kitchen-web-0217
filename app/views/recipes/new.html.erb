<h1>Create New Recipe!</h1>

<%= form_for @recipe do |f| %>
<%= f.text_field :name %><br />


<% @ingredients.each do |f| %>
<%= label_tag "ingredient_#{f.id}", f.name %>
<%= check_box_tag "recipe[ingredient_ids][]", f.id, false, id: "ingredient_#{f.id}" %> <br />
<% end %>

<%= f.submit %>
<% end %>
