<%= form_for @recipe do |f| %>
<%= f.text_field :name %><br />


<%= hidden_field_tag "recipe[ingredient_ids][]", nil %>
<% @all_ingredients.each do |f| %>
<%= label_tag "ingredient_#{f.id}", f.name %>
<%= check_box_tag "recipe[ingredient_ids][]", f.id, @ingredients.include?(f), id: "ingredient_#{f.id}" %> <br />
<%end%>
<%= f.submit %>
<% end %>
